{
  "name": "@zigah/audit-trails",
  "version": "1.0.0",
  "type": "module",
  "description": "An activity log to capture which element has been changed, when and by whom, as well as displaying both the old and the updated value of the changed element.",
  "main": "dist/src/main.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "start": "tsc && node --experimental-modules dist/src/main.js",
    "lint": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Theshedman/audit-trails.git"
  },
  "keywords": [
    "Audit",
    "Trails",
    "Log",
    "Security"
  ],
  "author": "Shedrack Ajaegbu <shedrack3@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Theshedman/audit-trails/issues"
  },
  "homepage": "https://github.com/Theshedman/audit-trails#readme",
  "dependencies": {
    "knex": "^2.4.2",
    "pg": "^8.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage"
        }
      ]
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "clover",
      "cobertura",
      "json",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "\\.[jt]s?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.[jt]s$": "$1"
    },
    "displayName": "Audit Trail Tests Cases",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "./node_modules/",
      "./dist/"
    ],
    "coveragePathIgnorePatterns": [
      "./node_modules/",
      "./dist/"
    ]
  }
}
